{
  "name": "threadedclass",
  "version": "0.8.0",
  "description": "",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "Johan Nyman",
    "email": "johan@superfly.tv",
    "url": "http://superfly.tv"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nytamin/threadedClass.git"
  },
  "bugs": {
    "url": "https://github.com/nytamin/threadedClass/issues"
  },
  "scripts": {
    "info": "npm-scripts-info",
    "build": "trash dist && yarn build:all",
    "buildtest": "yarn build:main && yarn unit",
    "build:main": "tsc -p tsconfig.build.json",
    "build:all": "yarn build:main && gulp browserify && gulp browserify-worker",
    "build:test-lib": "tsc -p tsconfig.test-lib.json",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "unit": "jest --forceExit",
    "test": "yarn lint && yarn unit",
    "test:integration": "yarn lint && jest --config=jest-integration.config.js",
    "watch": "jest --watch",
    "cov": "jest; open-cli coverage/lcov-report/index.html",
    "cov-open": "open-cli coverage/lcov-report/index.html",
    "send-coverage": "codecov",
    "docs": "yarn docs:html && open-cli docs/index.html",
    "docs:test": "yarn docs:html",
    "docs:html": "typedoc src/index.ts --excludePrivate --mode file --theme minimal --out docs",
    "docs:json": "typedoc --mode file --json docs/typedoc.json src/index.ts",
    "docs:prepare": "yarn docs:html && yarn build:all && yarn docs:copy",
    "docs:publish": "yarn docs:prepare && gh-pages -d docs -m \"Updates [skip ci]\"",
    "docs:copy": "gulp copy-to-docs",
    "help": "gh-pages -h",
    "changelog": "standard-version",
    "release": "yarn reset && yarn build && yarn test && yarn docs:publish && yarn changelog",
    "reset": "git clean -dfx && git reset --hard && yarn",
    "validate:dependencies": "yarn audit --groups dependencies",
    "validate:dev-dependencies": "yarn audit --groups devDependencies"
  },
  "scripts-info": {
    "info": "Display information about the scripts",
    "build": "(Trash and re)build the library",
    "lint": "Lint all typescript source files",
    "unit": "Build the library and run unit tests",
    "test": "Lint, build, and test the library",
    "watch": "Watch source files, rebuild library on changes, rerun relevant tests",
    "cov": "Run tests, generate the HTML coverage report, and open it in a browser",
    "docs": "Generate HTML API documentation and open it in a browser",
    "docs:publish": "Generate HTML API documentation and push it to GitHub Pages",
    "docs:json": "Generate API documentation in typedoc JSON format",
    "changelog": "Bump package.json version, update CHANGELOG.md, tag a release",
    "reset": "Delete all untracked files and reset the repo to the last commit",
    "release": "Clean, build, test, publish docs, and prepare release (a one-step publish process)"
  },
  "engines": {
    "node": ">=8.0"
  },
  "files": [
    "/dist",
    "/CHANGELOG.md",
    "/README.md",
    "/LICENSE"
  ],
  "devDependencies": {
    "@types/callsites": "^3.0.0",
    "@types/is-running": "^2.1.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.12.5",
    "browserify": "^16.5.0",
    "casparcg-connection": "^3.0.1",
    "codecov": "^3.5.0",
    "gh-pages": "^2.1.1",
    "gulp": "^4.0.2",
    "gulp-rename": "^1.4.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-uglify": "^3.0.2",
    "gulp-uglify-es": "^1.0.4",
    "jest": "^24.9.0",
    "npm-scripts-info": "^0.3.9",
    "open-cli": "^5.0.0",
    "standard-version": "^7.0.0",
    "trash-cli": "^3.0.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.16.0",
    "typescript": "~3.6.4",
    "uglify-js": "^3.6.0",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "keywords": [
    "thread",
    "async",
    "fork",
    "asynchronous"
  ],
  "dependencies": {
    "callsites": "^3.1.0",
    "eventemitter3": "^4.0.4",
    "is-running": "^2.1.0",
    "tslib": "^1.13.0"
  },
  "standard-version": {
    "message": "chore(release): %s [skip ci]",
    "tagPrefix": ""
  },
  "resolutions": {
    "**/conventional-changelog-angular": "5.0.6",
    "**/conventional-changelog-atom": "2.0.3",
    "**/conventional-changelog-codemirror": "2.0.3",
    "**/conventional-changelog-core": "4.1.3",
    "**/conventional-changelog-conventionalcommits": "4.2.3",
    "**/conventional-changelog-ember": "2.0.4",
    "**/conventional-changelog-eslint": "3.0.4",
    "**/conventional-changelog-express": "2.0.1",
    "**/conventional-changelog-jshint": "2.0.3",
    "**/conventional-changelog-preset-loader": "2.3.0",
    "**/conventional-changelog-writer": "4.0.11",
    "**/conventional-commits-filter": "2.0.2",
    "**/conventional-commits-parser": "3.0.8"
  }
}
